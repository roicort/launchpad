---
interface Value {
  title: string;
  description: string;
}

interface Props {
  eyebrow?: string;
  title?: string;
  copy?: string;
  values?: Value[];
}

const {
  eyebrow,
  title = 'Values & philosophy',
  copy,
  values = [],
} = Astro.props as Props;
---

<section class="space-y-6">
  <header class="space-y-2 max-w-2xl">
    {eyebrow && <p class="eyebrow m-0">{eyebrow}</p>}
    {title && <h2 class="text-3xl sm:text-4xl font-semibold leading-tight text-ink m-0">{title}</h2>}
    {copy && <p class="text-muted m-0">{copy}</p>}
  </header>

  {values.length > 0 && (
    <div class="grid gap-4 md:grid-cols-2">
      {values.map((item) => (
        <div class="rounded-2xl border border-border bg-surface px-5 py-6">
          <h3 class="text-xl font-semibold tracking-tight text-ink m-0">{item.title}</h3>
          <p class="text-muted text-sm leading-relaxed m-0 mt-2">{item.description}</p>
        </div>
      ))}
    </div>
  )}
</section>
